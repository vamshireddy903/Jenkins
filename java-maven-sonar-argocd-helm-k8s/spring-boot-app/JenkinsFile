pipeline {
    agent {
        docker {
            image 'vamshi589/maven-docker-agent:latest'
            args '--entrypoint="" -u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        DOCKER_IMAGE = "vamshi589/springbootapp"
        GITHUB_REPO = "vamshi589/Jenkins-Zero-To-Hero"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git url: "https://github.com/${env.GITHUB_REPO}.git", branch: 'main', credentialsId: 'github-token'
            }
        }

        stage('Configure Git') {
            steps {
                sh '''
                    git config user.name "Vamshi"
                    git config user.email "vamshi@gmail.com"
                '''
            }
        }

        stage('Build and Test') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Static Code Analysis') {
            steps {
                withSonarQubeEnv('MySonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub-token', variable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u vamshi589 --password-stdin
                        docker build -t $DOCKER_IMAGE:latest .
                        docker push $DOCKER_IMAGE:latest
                    '''
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github-token', variable: 'GIT_TOKEN')]) {
                    sh '''
                        git clone https://${GIT_TOKEN}@github.com/vamshi589/k8s-manifests.git
                        cd k8s-manifests
                        sed -i "s|image:.*|image: $DOCKER_IMAGE:latest|" deployment.yaml
                        git config user.email "vamshi@gmail.com"
                        git config user.name "Vamshi"
                        git add deployment.yaml
                        git commit -m "Update image to $DOCKER_IMAGE:latest"
                        git push https://${GIT_TOKEN}@github.com/vamshi589/k8s-manifests.git
                    '''
                }
            }
        }
    }
}
